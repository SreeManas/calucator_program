a = float(input("Enter first number: "))
b = float(input("Enter second number: "))

print("Choose operation:")
print("+  -  *  /")
op = input("Enter operator: ")

if op == '+':
    result = a + b
elif op == '-':
    result = a - b
elif op == '*':
    result = a * b
elif op == '/':
    if b == 0:
        print("Cannot divide by zero")
        exit()
    result = a / b
else:
    print("Invalid operation")
    exit()

print("Result:", result)
